[Unit]
Description=Gunicorn instance for Flask OIDC app
After=network.target

[Service]
User=azureuser
Group=www-data
WorkingDirectory=/home/azureuser/oidc-flask-app
Environment="PATH=/home/azureuser/oidc-flask-app/venv/bin"
ExecStart=/home/azureuser/oidc-flask-app/venv/bin/gunicorn --workers 3 --bind 0.0.0.0:8001 app:app
Restart=always

[Install]
WantedBy=multi-user.target
